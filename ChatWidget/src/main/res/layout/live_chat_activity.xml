<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_chat_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.components.LiveChatActivity">

    <com.livechatinc.chatwidget.LiveChatView
        android:id="@+id/live_chat_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/live_chat_error_view"
        layout="@layout/live_chat_error_layout"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/live_chat_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
